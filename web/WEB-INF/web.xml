<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>app01a.MyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletConfigDemoServlet</servlet-name>
        <servlet-class>app01a.ServletConfigDemoServlet</servlet-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>Harry Taciak</param-value>
        </init-param>
        <init-param>
            <param-name>email</param-name>
            <param-value>admin@example.com</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>GenericServletDemoServlet</servlet-name>
        <servlet-class>app01a.GenericServletDemoServlet</servlet-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>Harry Taciak</param-value>
        </init-param>
        <init-param>
            <param-name>email</param-name>
            <param-value>admin@example.com</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>FormServlet</servlet-name>
        <servlet-class>app01b.FormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Top10Servlet</servlet-name>
        <servlet-class>app02a.Top10Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>app02a.hiddenfields.CustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PreferenceServlet</servlet-name>
        <servlet-class>app02a.cookie.PreferenceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CookieClassServlet</servlet-name>
        <servlet-class>app02a.cookie.CookieClassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CookieInfoServlet</servlet-name>
        <servlet-class>app02a.cookie.CookieInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingCartServlet</servlet-name>
        <servlet-class>app02a.httpsession.ShoppingCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/MyServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletConfigDemoServlet</servlet-name>
        <url-pattern>/servletConfigDemo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenericServletDemoServlet</servlet-name>
        <url-pattern>/Generic</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormServlet</servlet-name>
        <url-pattern>/form</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Top10Servlet</servlet-name>
        <url-pattern>/top10</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/customer</url-pattern>
        <url-pattern>/editCustomer</url-pattern>
        <url-pattern>/updateCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PreferenceServlet</servlet-name>
        <url-pattern>/preference</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CookieClassServlet</servlet-name>
        <url-pattern>/cookieClass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CookieInfoServlet</servlet-name>
        <url-pattern>/cookieInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingCartServlet</servlet-name>
        <url-pattern>/products</url-pattern>
        <url-pattern>/viewProductDetails</url-pattern>
        <url-pattern>/addToCart</url-pattern>
        <url-pattern>/viewCart</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
